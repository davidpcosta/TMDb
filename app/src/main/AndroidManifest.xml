<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.davidcosta.tmdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name="me.davidcosta.tmdb.ui.splash.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TMDbTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="me.davidcosta.tmdb.ui.highlight.HighlightActivity"
            android:parentActivityName="me.davidcosta.tmdb.ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyApp.ActionBar.Transparent" />

        <activity
            android:name="me.davidcosta.tmdb.ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TMDbTheme.Dark" />

