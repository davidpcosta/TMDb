<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- MyApp Theme -->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp"/>
    <style name="Theme.MyApp.FullScreen" parent="Base.Theme.MyApp.FullScreen" />
    <style name="Theme.MyApp.NoActionBar" parent="Base.Theme.MyApp.NoActionBar" />
    <style name="Theme.MyApp.ActionBar.Transparent" parent="Base.Theme.MyApp.ActionBar.Transparent" />

    <!-- TMDb Theme -->
    <style name="Theme.TMDbTheme" parent="Base.Theme.MyApp">
        <item name="colorPrimary">@color/tmdb_light_blue</item>
        <item name="colorPrimaryVariant">@color/tmdb_light_blue</item>

        <item name="colorSecondary">@color/tmdb_light_green</item>
        <item name="colorSecondaryVariant">@color/tmdb_light_green</item>

        <item name="colorAccent">@color/tmdb_light_green</item>
        <item name="android:colorBackground">@color/tmdb_dark_blue</item>
    </style>

    <style name="Theme.TMDbTheme.FullScreen">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="Theme.TMDbTheme.NoActionBar" parent="Base.Theme.MyApp.NoActionBar" />
    <style name="Theme.TMDbTheme.ActionBar.Transparent" parent="Base.Theme.MyApp.ActionBar.Transparent" />



    <!-- Base Theme -->

    <style name="Base.Theme.MyApp.FullScreen">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="Base.Theme.MyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.Theme.MyApp.ActionBar" />
    <style name="Base.Theme.MyApp.ActionBar.Transparent">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/transparent</item>
    </style>

    <style name="Base.Theme.MyApp" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <!--colorSecondary colors are most often used as accents on components, such as FABs and  selection controls.-->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>

        <item name="colorAccent">@color/tmdb_light_blue</item>

        <!--colorBackground appears behind scrollable content and is used for the default window background. -->
        <item name="android:colorBackground">@color/black</item>

        <!--colorSurface is mapped to the surface of components such as cards, sheets and menus. -->
        <item name="colorSurface">@color/black</item>

        <!-- colorError is used to indicate an error state for components such as text fields.-->
        <item name="colorError">@color/red</item>

        <!--"On" colors  -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MyTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyTheme.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyTheme.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyTheme.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyTheme.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyTheme.LargeComponent</item>

        <!--Component styles-->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
<!--        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.TextButton.Icon</item>-->
    </style>
</resources>
