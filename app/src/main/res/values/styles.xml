<resources>

    <style name="Widget" />

    <style name="Widget.MyTheme" />

    <!-- Home -->
    <style name="Widget.MyTheme.Home">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="Widget.MyTheme.Home.Subtitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- Search -->
    <style name="Widget.MyTheme.Search">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="Widget.MyTheme.Search.SearchInput">
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="Widget.MyTheme.Search.EmptyTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.MyTheme.Search.EmptySubTitle">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- Highlight -->
    <style name="Widget.MyTheme.Highlight">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="Widget.MyTheme.Highlight.MovieTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="Widget.MyTheme.Highlight.Genres">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.MyTheme.Highlight.VoteAverage">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.MyTheme.Highlight.Year">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.MyTheme.Highlight.Runtime">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.MyTheme.Highlight.ListSeparator">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="Widget.MyTheme.Highlight.SubTitle">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.MyTheme.Highlight.Label">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.MyTheme.Highlight.LabelValue">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Widget.MyTheme.Highlight.Body">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="Widget.MyTheme.Button" />

    <style name="Widget.MyTheme.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.MyTheme.Button.Secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="rippleColor">?attr/colorOnBackground</item>
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="textAllCaps">true</item>
    </style>

