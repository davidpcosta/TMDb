<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/Widget.MyTheme.Search.SearchInput"
            android:id="@+id/toolbar_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Pesquise por serie, filmes, etc..."
            android:drawableStart="@drawable/ic_search_24dp"
            android:inputType="textFilter"
            android:focusableInTouchMode="true"
            android:textIsSelectable="true"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/toolbar_search_button_clear"/>

        <ImageButton
            android:id="@+id/toolbar_search_button_clear"
            android:src="@drawable/ic_close_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/toolbar_search_input"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_search_input"
            app:layout_constraintStart_toEndOf="@id/toolbar_search_input"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



