<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.highlight.HighlightActivity">

    <data>
        <variable name="activity" type="me.davidcosta.tmdb.ui.highlight.HighlightActivity" />
    </data>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            style="@style/AppTheme.Activity"
            android:background="@color/backgroundDark">

            <ImageView
                android:id="@+id/movie_backdrop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/activity_highlight_description_movie_poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/view_pager"/>

            <View
                android:id="@+id/movie_backdrop_gradient"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_backdrop_gradient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/view_pager"/>

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginTop="56dp"
                android:contentDescription="@string/activity_highlight_description_movie_poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movie_title"
                style="@style/AppTheme.Highlight.MovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_poster" />

            <TextView
                android:id="@+id/movie_overview"
                style="@style/AppTheme.Highlight.MovieOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/movie_title" />

            <LinearLayout
                android:id="@+id/add_to_watchlist_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_overview" >

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_to_watchlist_button"
                    style="@style/AppTheme.SecondaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_highlight_button_add_to_watchlist"
                    android:onClick="@{() -> activity.handleWatchlistButtonClicked()}"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_add_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/activity_highlight_button_add_to_watchlist"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"

                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    style="@style/AppTheme.Highlight.TabBar"
                    android:id="@+id/tabs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_to_watchlist_button_container">

                    <com.google.android.material.tabs.TabItem
                        android:text="@string/activity_highlight_tab_similar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <com.google.android.material.tabs.TabItem
                        android:text="@string/activity_highlight_tab_details"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tabs">
            </androidx.viewpager.widget.ViewPager>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>